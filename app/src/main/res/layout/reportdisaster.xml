<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <!--    just testing commit -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"

                android:focusable="true"
                android:clickable="true"

                >

                <ImageButton

                    android:id="@+id/lvback"
                    style="@style/TopBack_img" />
            </LinearLayout>

            <TextView
                android:layout_weight="80"
                style="@style/TopHeader_text"
                android:text="@string/s_rd" />


        </LinearLayout>

        <View style="@style/TopLine_View" />

        <ScrollView style="@style/ScrollView">
            <!-- Parent layout starts -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout style="@style/nLinerLayout">

                    <LinearLayout style="@style/StaricLinLayout">

                        <TextView
                            style="@style/SLable"
                            android:text="@string/rd1" />

                        <TextView style="@style/StaricTextview" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rd1LV"
                        style="@style/IconLinLayout"

                        >

                        <TextView
                            android:id="@+id/rd1Tv"
                            style="@style/SResponce"
                            android:layout_width="0dp"
                            android:layout_weight="100"
                            android:hint="@string/rd1"

                            />

                        <ImageView style="@style/DownImageView" />

                    </LinearLayout>

                    <View style="@style/nView" />

                </LinearLayout>

                <LinearLayout style="@style/nLinerLayout">

                    <LinearLayout style="@style/StaricLinLayout">

                        <TextView
                            style="@style/SLable"
                            android:text="@string/rd2" />

                        <TextView style="@style/StaricTextview" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/rd2LV"
                        style="@style/IconLinLayout"

                        >

                        <TextView
                            android:id="@+id/rd2Tv"
                            style="@style/SResponce"
                            android:layout_width="0dp"
                            android:layout_weight="100"
                            android:hint="@string/rd2"

                            />

                        <ImageView style="@style/DownImageView" />

                    </LinearLayout>

                    <View style="@style/nView" />

                </LinearLayout>

                <LinearLayout style="@style/nLinerLayout">

                    <TextView
                        style="@style/SLable"
                        android:text="@string/rd3"

                        />

                    <EditText
                        android:id="@+id/rd3Tv"
                        style="@style/SResponce"
                        android:hint="@string/rd3"
                        android:lines="4"

                        />

                    <View style="@style/nView" />

                </LinearLayout>


                <LinearLayout style="@style/nLinerLayout">

                    <LinearLayout style="@style/StaricLinLayout">

                        <TextView
                            style="@style/SLable"
                            android:text="@string/rd4" />

                        <TextView style="@style/StaricTextview" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rd4LV"
                        style="@style/IconLinLayout"

                        >

                        <TextView
                            android:id="@+id/rd4Tv"
                            style="@style/SResponce"
                            android:layout_width="0dp"
                            android:layout_weight="100"
                            android:hint="@string/rd4"

                            />

                        <ImageView style="@style/DownImageView" />

                    </LinearLayout>

                    <View style="@style/nView" />

                </LinearLayout>

                <LinearLayout style="@style/nLinerLayout">

                    <TextView
                        style="@style/SLable"
                        android:text="@string/rd5"

                        />

                    <EditText
                        android:id="@+id/rd5Tv"
                        style="@style/SResponce"
                        android:hint="@string/rd5"
                        android:lines="4" />

                    <View style="@style/nView" />

                </LinearLayout>


                <LinearLayout style="@style/nLinerLayout">

                    <TextView
                        style="@style/SLable"
                        android:text="@string/rd6"

                        />

                    <LinearLayout
                        style="@style/IconLinLayout"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="40dp"
                        android:orientation="horizontal"
                        android:weightSum="60"


                        >

                        <LinearLayout
                            android:id="@+id/rd6LV1"
                            style="@style/UploadImageLV"

                            >

                            <ImageView
                                android:id="@+id/rd6Imgv1"
                                style="@style/DownImageView"
                                android:src="@drawable/ic_add_black_24dp"


                                />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/rd6LV2"
                            style="@style/UploadImageLV"

                            >

                            <ImageView
                                android:id="@+id/rd6Imgv2"
                                style="@style/DownImageView"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_add_black_24dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rd6LV3"
                            style="@style/UploadImageLV"

                            >

                            <ImageView
                                android:id="@+id/rd6Imgv3"
                                style="@style/DownImageView"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_add_black_24dp" />
                        </LinearLayout>


                    </LinearLayout>

                    <View style="@style/nView" />

                </LinearLayout>


                <LinearLayout style="@style/nLinerLayout">


                    <LinearLayout style="@style/StaricLinLayout">

                        <TextView
                            style="@style/SLable"
                            android:text="@string/s_g_crnt_loc"

                            />

                        <TextView style="@style/StaricTextview" />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/checkboxGps"

                        style="@style/Undertaking"
                        android:text="@string/undertakingGPS"

                        />


                    <LinearLayout style="@style/IconLinLayout"

                        >

                        <TextView
                            style="@style/SResponce"
                            android:layout_width="0dp"
                            android:layout_weight="30"
                            android:hint="@string/s_g_lat" />

                        <TextView
                            android:id="@+id/latitude"
                            style="@style/SResponce"

                            android:layout_width="0dp"
                            android:layout_weight="70" />


                    </LinearLayout>

                    <LinearLayout style="@style/IconLinLayout"

                        >

                        <TextView
                            style="@style/SResponce"
                            android:layout_width="0dp"
                            android:layout_weight="30"
                            android:hint="@string/s_g_lon"

                            />

                        <TextView
                            android:id="@+id/longitude"
                            style="@style/SResponce"

                            android:layout_width="0dp"
                            android:layout_gravity="start"
                            android:layout_weight="70" />


                    </LinearLayout>

                    <View style="@style/nView" />

                </LinearLayout>

                <LinearLayout style="@style/nLinerLayout">


                    <LinearLayout style="@style/StaricLinLayout">

                        <TextView
                            style="@style/SLable"
                            android:text="@string/s_g_h_dec"

                            />

                        <TextView style="@style/StaricTextview" />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/checkbox"


                        style="@style/Undertaking"

                        />

                    <View style="@style/nView" />

                </LinearLayout>

                <LinearLayout style="@style/nLinerLayout">

                    <TextView
                        style="@style/SLable"
                        android:text="@string/s_g_h_note"

                        />

                    <TextView
                        style="@style/note"
                        android:text="@string/s_g_note"

                        />

                    <Button

                        android:id="@+id/btnsubmit"
                        style="@style/SubmiteButt" />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>
</layout>
