<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <!--    just testing commit -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:focusable="true"
                android:clickable="true"

                >

                <ImageButton

                    android:id="@+id/lvback"
                    style="@style/TopBack_img" />
            </LinearLayout>

            <TextView
                android:layout_weight="80"
                style="@style/TopHeader_text"
                android:text="@string/about_App" />


        </LinearLayout>

        <View style="@style/TopLine_View" />

        <ScrollView
            style="@style/ScrollView"
            android:padding="4dp"
            android:background="@color/white">
            <!-- Parent layout starts -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white2"
                android:orientation="vertical"
                android:weightSum="100">





                <!-- child  layout starts Facebook -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llfbk"

                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/liner_round"

                    android:padding="2dp"
                    >






                </LinearLayout>
                <!-- child  layout ends youtube -->
                <!-- child  layout starts website -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llweb"

                    android:orientation="vertical"

                    android:background="@drawable/liner_round"

                    android:padding="5dp"
                     >





                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/about_App_text"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:gravity="fill"
                        android:layout_marginTop="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us"
                        android:textSize="15sp"
                        android:textColor="@color/Lable"
                        android:textStyle="bold"
                        android:layout_marginTop="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us_uop"
                        android:textSize="14sp"
                        android:textColor="@color/Lable"
                        android:layout_marginTop="2dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us_smj"
                        android:textSize="14sp"
                        android:layout_margin="3dp"

                        android:textColor="@color/Lable" />





                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us_irf"
                        android:textSize="14sp"
                        android:textColor="@color/Lable"
                        android:layout_margin="3dp"
                        android:layout_marginTop="8dp" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us_pdma"
                        android:textSize="14sp"
                        android:textColor="@color/Lable"
                        android:layout_marginTop="10dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us_peoc"
                        android:textSize="14sp"
                        android:textColor="@color/Lable"
                        android:layout_margin="3dp"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us_tausf"
                        android:textSize="14sp"
                        android:textColor="@color/Lable"
                        android:layout_margin="3dp"
                        android:layout_marginTop="8dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us_mc"
                        android:textSize="14sp"
                        android:textColor="@color/Lable"
                        android:layout_margin="3dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        />



                </LinearLayout>
                <!-- child  layout ends website -->




            </LinearLayout>


        </ScrollView>


    </LinearLayout>
</layout>
